<?xml version="1.0" encoding="UTF-8"?>
<Bindings>
  <Layer name="SI_KEYBINDINGS_LAYER_GENERAL">
    <Category name="SI_KEYBINDINGS_CATEGORY_OPTIMALWEAVE">
      <!-- Toggle Mode (1-2-3 cycle) -->
      <Action name="OPTIMALWEAVE_TOGGLE_MODE">
        <Down>OptimalWeave.ToggleMode()</Down>
      </Action>
      
      <!-- Toggle Custom Block List -->
      <Action name="OPTIMALWEAVE_TOGGLE_CUSTOM_BLOCK_LIST">
        <Down>OptimalWeave.ToggleCustomBlockList()</Down>
      </Action>
      
      <!-- Toggle Custom Recast Block List -->
      <Action name="OPTIMALWEAVE_TOGGLE_CUSTOM_RECAST_BLOCK_LIST">
        <Down>OptimalWeave.ToggleCustomRecastBlockList()</Down>
      </Action>
      
      <!-- Toggle Backbar Features -->
      <Action name="OPTIMALWEAVE_TOGGLE_BACKBAR_FEATURES">
        <Down>OptimalWeave.ToggleBackbarFeatures()</Down>
      </Action>
      
      <!-- Toggle Backbar Weave Assist -->
      <Action name="OPTIMALWEAVE_TOGGLE_BACKBAR_WEAVE_ASSIST">
        <Down>OptimalWeave.ToggleBackbarWeaveAssist()</Down>
      </Action>
      
      <!-- Toggle Execute Check -->
      <Action name="OPTIMALWEAVE_TOGGLE_EXECUTE_CHECK">
        <Down>OptimalWeave.ToggleExecuteCheck()</Down>
      </Action>
    </Category>
  </Layer>
</Bindings>